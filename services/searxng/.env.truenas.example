# TrueNAS Dockge Environment Variables for SearXNG
# Copy this to .env and modify as needed

# Network Configuration
PROXY_NETWORK=proxy
PROXY_NETWORK_EXTERNAL=true

# Data Paths (TrueNAS)
SEARXNG_CONFIG_PATH=/mnt/Media/libraries/dockge/searxng
SEARXNG_DATA_VOLUME=searxng_data
VALKEY_DATA_VOLUME=valkey_data

# User/Group IDs
PUID=1000
PGID=1000

# SearXNG Configuration
SEARXNG_HOSTNAME=searxng.storage-01.lan
SEARXNG_PORT=8080
SEARXNG_REMOTE_SETUP=1 