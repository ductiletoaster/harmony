# TrueNAS Dockge Environment Variables for Open WebUI
# Copy this to .env and modify as needed

# Network Configuration
PROXY_NETWORK=proxy
PROXY_NETWORK_EXTERNAL=true

# Data Paths (TrueNAS)
OPEN_WEBUI_DATA_PATH=/mnt/Media/libraries/dockge/open-webui
OLLAMA_DATA_PATH=/mnt/Media/libraries/dockge/containers/ollama
FASTER_WHISPER_DATA_PATH=/mnt/Media/libraries/dockge/faster-whisper

# User/Group IDs
PUID=1000
PGID=1000

# Ollama Configuration
OLLAMA_KEEP_ALIVE=24h
OLLAMA_BASE_URL=http://ollama:11434
OLLAMA_API_KEY=ollama # Change this!

# OpenAPI Configuration
OPENAI_API_BASE_URL=https://api.openai.com/v1
OPENAI_API_KEY=sk-proj-1234567890 # Change this!

# Faster Whisper Configuration
WHISPER_MODEL=tiny-int8
WHISPER_BEAM=1
WHISPER_LANG=en

# GPU Configuration (uncomment and configure as needed)
# GPU_DRIVER=nvidia
# GPU_COUNT=all
# GPU_CAPABILITIES=gpu 