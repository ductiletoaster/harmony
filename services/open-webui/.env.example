# Open WebUI Service - Workstation 1 (w01) Configuration
# Copy this file to .env.w01 and customize as needed

# =============================================================================
# FILE PERMISSIONS & SYSTEM
# =============================================================================
PUID=1000
PGID=1000
TZ=Etc/UTC

# =============================================================================
# OLLAMA CONFIGURATION
# =============================================================================
ENABLE_OLLAMA=True
OLLAMA_BASE_URL=http://ollama:11434
OLLAMA_API_KEY=ollama

# =============================================================================
# OPENAI CONFIGURATION
# =============================================================================
ENABLE_OPENAI_API=True
OPENAI_API_BASE_URL=https://api.openai.com/v1
OPENAI_API_KEY=sk-proj-1234567890

# =============================================================================
# WEB SEARCH & RAG CONFIGURATION
# =============================================================================
ENABLE_WEB_SEARCH=True
WEB_SEARCH_ENGINE=searxng
WEB_SEARCH_RESULT_COUNT=3
WEB_SEARCH_CONCURRENT_REQUESTS=10

# =============================================================================
# WHISPER SPEECH-TO-TEXT CONFIGURATION
# =============================================================================
ENABLE_WHISPER=True
WHISPER_BASE_URL=http://faster-whisper:10300
WHISPER_MODEL=tiny
WHISPER_LANGUAGE=en
WHISPER_TASK=transcribe

# =============================================================================
# PERFORMANCE & OPTIMIZATION
# =============================================================================
BYPASS_WEB_SEARCH_EMBEDDING_AND_RETRIEVAL=False
BYPASS_WEB_SEARCH_WEB_LOADER=False

# =============================================================================
# ACCESS CONTROL & SECURITY
# =============================================================================
BYPASS_MODEL_ACCESS_CONTROL=True

# =============================================================================
# DATA PATHS (Workstation 1)
# =============================================================================
OPEN_WEBUI_DATA_PATH=./open-webui
OLLAMA_DATA_PATH=./ollama
FASTER_WHISPER_DATA_PATH=./faster-whisper

# =============================================================================
# GPU CONFIGURATION (uncomment and configure if using GPU)
# =============================================================================
