# Open WebUI Environment Configuration
# Copy this file to .env and modify as needed

#=====================================================================#
#                    User and Group Configuration                     #
#=====================================================================#
PUID=1000
PGID=1000

#=====================================================================#
#                        GPU Configuration                           #
#=====================================================================#
# GPU acceleration is available in docker-compose.gpu.yml
# 
# DEFAULT: CPU mode (docker-compose.yml) - works on all systems
# GPU MODE: Use docker-compose.gpu.yml with these variables:
#
# GPU_DRIVER=nvidia          # Driver type: nvidia, rocm, etc.
# GPU_COUNT=all              # Number of GPUs: all, 1, 2, etc.
# GPU_CAPABILITIES=gpu       # Capabilities: gpu, compute, utility

#=====================================================================#
#                     Ollama Configuration                           #
#=====================================================================#
OLLAMA_KEEP_ALIVE=24h
# OLLAMA_API_CREDENTIALS=user:password

#=====================================================================#
#                   Open WebUI Configuration                         #
#=====================================================================#
# ENABLE_IMAGE_GENERATION=True
# COMFYUI_BASE_URL=http://comfy.docker.localhost:8188

#=====================================================================#
#                RAG Web Search Configuration                        #
#=====================================================================#
ENABLE_RAG_WEB_SEARCH=True
RAG_WEB_SEARCH_ENGINE=searxng
RAG_WEB_SEARCH_RESULT_COUNT=3
RAG_WEB_SEARCH_CONCURRENT_REQUESTS=10
SEARXNG_QUERY_URL=http://searxng:8080/search?q=<query>

#=====================================================================#
#                     SearXNG Configuration                          #
#=====================================================================#
SEARXNG_HOSTNAME=searxng.docker.localhost
SEARXNG_PORT=8080

#=====================================================================#
#                Faster Whisper Configuration                        #
#=====================================================================#
# https://docs.linuxserver.io/images/docker-faster-whisper/
# GPU acceleration available in docker-compose.gpu.yml
WHISPER_MODEL=tiny-int8    # Model: tiny-int8, base-int8, small-int8, medium-int8, large-int8
WHISPER_BEAM=1             # Number of candidates to consider simultaneously
WHISPER_LANG=en            # Language for transcription (en, fr, es, de, etc.)
