# TrueNAS Dockge Environment Variables for Syncthing
# Copy this to .env and modify as needed

# Network Configuration
PROXY_NETWORK=proxy
PROXY_NETWORK_EXTERNAL=true
SYNCTHING_NETWORK_NAME=syncthing_network

# Data Paths (TrueNAS)
SYNCTHING_CONFIG_PATH=/mnt/Media/libraries/dockge/syncthing
SYNCTHING_STORAGE_PATH=/mnt/Media/libraries/dockge/containers/syncthing

# User/Group IDs
PUID=1000
PGID=1000

# Timezone
TZ=Etc/UTC 