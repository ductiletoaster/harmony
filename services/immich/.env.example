# Immich Service - Generic Environment Configuration
# Copy this file to .env and customize it for your deployment

# File Permissions
PUID=1000
PGID=1000

# Timezone
TZ=Etc/UTC

# Immich Version
IMMICH_VERSION=release

# Database Configuration
DB_USERNAME=postgres
DB_PASSWORD=your-db-password
DB_DATABASE_NAME=immich

# Redis Configuration
REDIS_PASSWORD=your-redis-password

# Volume Paths (Customize for your deployment)
IMMICH_UPLOAD_PATH=./library
IMMICH_DB_PATH=./postgres
IMMICH_REDIS_PATH=./redis
IMMICH_ML_MODELS_PATH=./ml-models

# Optional Features
DISABLE_REVERSE_GEOCODING=false
REVERSE_GEOCODING_PRECISION=3
LOG_LEVEL=log
ENABLE_DIAGNOTICS=true

# GPU Configuration (uncomment and configure if using GPU)
# GPU_DRIVER=nvidia
# GPU_COUNT=all
# GPU_CAPABILITIES=gpu 