# Immich Service - TrueNAS Dockge Environment
# Copy this file to .env and modify for your TrueNAS setup

# Network Configuration
PROXY_NETWORK=proxy
PROXY_NETWORK_EXTERNAL=true

# File Permissions
PUID=1000
PGID=1000

# Timezone
TZ=Etc/UTC

# Immich Version
IMMICH_VERSION=release

# Database Configuration
DB_USERNAME=postgres
DB_PASSWORD=postgres
DB_DATABASE_NAME=immich

# Redis Configuration
REDIS_PASSWORD=

# Volume Paths (TrueNAS Dockge)
IMMICH_UPLOAD_PATH=/mnt/Media/libraries/dockge/containers/immich/library
IMMICH_DB_PATH=/mnt/Media/libraries/dockge/immich/postgres
IMMICH_REDIS_PATH=/mnt/Media/libraries/dockge/immich/redis
IMMICH_ML_MODELS_PATH=/mnt/Media/libraries/dockge/immich/ml-models

# Optional Features
DISABLE_REVERSE_GEOCODING=false
REVERSE_GEOCODING_PRECISION=3
LOG_LEVEL=log
ENABLE_DIAGNOTICS=true

# GPU Configuration (uncomment and configure if using GPU)
# GPU_DRIVER=nvidia
# GPU_COUNT=all
# GPU_CAPABILITIES=gpu 